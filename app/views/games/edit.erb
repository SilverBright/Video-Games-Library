<%# EDIT PAGE %>

<center><h3>Edit or delete your game</h3></center>

<%# UPDATE FORM %>

  <center>
    <div class="container">
      <form class="form-inline" method="post" action="/games/<%= @game.id %>"> 
        <input id='hidden' type='hidden' name='_method' value='patch'> 

        <%# TITLE %>

        <div class="form-group">
          <label for="title">New Title:</label>   
          <input type="text" class="form-control" placeholder="<%= @game.title %>" name="title">
        </div>
        
        <%# PLATFORM %>

        <div class="form-group"> 
          <label for="platform">New Platform:</label>
          <input type="text" class="form-control" placeholder="<%= @game.platform %>" name="platform">
        </div>

        <%# SUBMIT BUTTON %>

        <button type="submit" id='submit' class="btn btn-default">Submit</button>  
      </form>

    <%# DELETE BUTTON %>

    <p>
      <form action="/games/<%= @game.id %>/delete" class="btn btn-default" method="post">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" value="Delete Your Entry">
      </form>
    </p>
  </div>
</center>