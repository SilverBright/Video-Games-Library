<%# VIDEO GAMES LIBRARY %>

	<%# ADD A NEW GAME%>

	<center>
  <% if logged_in? %>
		<a href="/games/new" class="btn btn-success" role="button" >Add A Game</a>
	<% end %>
</center>

<hr>

<%# LIST ALL THE TITLES, PLATFORMS, AND USERS %>

<div class="container">
	<% @games.reverse.each do |game| %>
			Title: <a href="/games/<%= game.id %>"><b><%=game.title %></b></a>
			Platform:&ensp;<b><%=game.platform%></b>&ensp;
			Posted by:&ensp;<b><%= game.user.username %></b>
		<hr>
	<% end %>
</div>
	