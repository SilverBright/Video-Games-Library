<%# VIDEO GAME LIBRARY %>

<center>
	<h2>VIDEO GAME LIBRARY</h2>

<%# CREATE A NEW GAME%>

  <% if logged_in? %>
		<a href="/games/new" class="btn btn-success" role="button" >Add A Game</a>
	<% end %> 

	<hr>
	<i>To edit or delete, click on a title (you must be the creator of that title)</i>
	<hr>

<%# LIST ALL THE GAMES AND USERS %>
	<div>
		<% @games.each do |game| %>
			<a href="/games/<%= game.id %>"><p><b><%=game.title %></b></a>
				Platform:&ensp;<b><%=game.platform%></b>&ensp;
				Posted by:&ensp;<b><%= game.user.username %></b></p>
			<hr>
		<% end %>
	</div>
</center>